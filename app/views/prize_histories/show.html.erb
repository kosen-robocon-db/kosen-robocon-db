<% provide(:title, "第#{params[:contest_nth]}回#{@tournament}の成績と受賞情報") %>

<%= render "shared/title", title: (yield :title) %>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p><%= link_to_prior_prize_history params[:contest_nth],
        params[:region_code] %></p>
    </div>
    <div class="pull-right">
      <p><%= link_to_posterior_prize_history params[:contest_nth],
        params[:region_code] %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h4>成績</h4>
    <table class="table table-striped table-condensed">
      <tbody>
        <% @results.each do |result| %>
        <tr>
          <td><%= result.prize.name          %></td>
          <td>
            <%= link_to result.campus.abbreviation,
              campus_path(result.campus.code) %>
          </td>
          <td><%= result.robot.team          %></td>
          <td>
            <%= link_to result.robot.name, robot_path(result.robot.code) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p><%= link_to_prior_page params[:contest_nth], params[:region_code] %></p>
    </div>
    <div class="pull-right">
      <p><%= link_to_posterior_page params[:contest_nth], params[:region_code] %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h4>受賞</h4>
    <table class="table table-striped table-condensed">
      <tbody>
        <% @prizes.each do |prize| %>
        <tr>
          <td><%= prize.prize.name          %></td>
          <td>
            <%= link_to prize.campus.abbreviation,
              campus_path(prize.campus.code) %>
          </td>
          <td><%= prize.robot.team          %></td>
          <td>
            <%= link_to prize.robot.name, robot_path(prize.robot.code) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p><%= link_to_prior_page params[:contest_nth], params[:region_code] %></p>
    </div>
    <div class="pull-right">
      <p><%= link_to_posterior_page params[:contest_nth], params[:region_code] %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <p><%= link_to fa_icon("chevron-left", text: "一覧へ戻る"),
      contest_path(params[:contest_nth]) %></p>
  </div>
</div>
