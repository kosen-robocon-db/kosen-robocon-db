<% provide(:title, "参加統計") %>

<%= render "shared/title", title: (yield :title) %>

<div class="row">
  <div class="col-lg-12">
    <%= will_paginate @contest_entries, inner_window: 2, outer_window: 0  %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th class="text-center">回</th>
          <th class="text-center">学校数</th>
          <th class="text-center">キャンパス数</th>
          <th class="text-center">チーム数</th>
        </tr>
      </thead>
      <tbody>
        <% @contest_entries.each do |entry| %>
          <tr>
            <td class="text-right"><%= entry.contest_id %></td>
            <td class="text-right"><%= entry.school %></td>
            <td class="text-right"><%= entry.campus %></td>
            <td class="text-right"><%= entry.team %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= will_paginate @contests, inner_window: 2, outer_window: 0  %>
  </div>
</div>
