<%= f.hidden_field :id %>
<%
  gaining_point_numbers   = option_numbers                   end_number: 50
  deducting_point_numbers = option_numbers                   end_number:  5
  total_point_numbers     = option_numbers begin_number: -5, end_number: 50
%>
<%###########################################################################%>
<% lablel_tag "得点とバスケット・ドリブル：" %>
<div class="indent">
  <%= "#{@robot.name}：" %>
  <div class="indent">
    得点：<%= f.select :my_gaining_point, gaining_point_numbers %>点
    <br />
    減点：<%= f.select :my_deducting_point, deducting_point_numbers %>点
    <br />
    合計：<%= f.select :my_total_point, total_point_numbers %>点
    <%#======================================================================%>
    <br />
    バスケット・ドリブル：<%= f.check_box :my_basket_drible,
      { checked: f.object.my_basket_drible }, true, false %>
  </div>
  <%#------------------------------------------------------------------------%>
  <%= "対戦相手：" %>
  <div class="indent">
    得点：<%= f.select :opponent_gaining_point, gaining_point_numbers %>点
    <br />
    減点：<%= f.select :opponent_deducting_point, deducting_point_numbers %>点
    <br />
    合計：<%= f.select :opponent_total_point, total_point_numbers %>点
    <%#======================================================================%>
    <br />
    バスケット・ドリブル：<%= f.check_box :opponent_basket_drible,
      { checked: f.object.opponent_basket_drible }, true, false %>
  </div>
</div>
<%###########################################################################%>
<br />
<%= render "game_details/form/common_parts/special_win", f: f,
  special_win_name: "Vゴール" %>
<%#==========================================================================%>
<br />
<%= f.label :extra_time, "延長(60秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<%###########################################################################%>
<br />
<%= f.label :memo, "メモ：" %>
<div class="indent">
  <%= f.text_field :memo %>
</div>
<%#==========================================================================%>
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
