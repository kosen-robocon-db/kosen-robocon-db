<%= f.hidden_field :id %>
<%
  gaining_point_numbers   = option_numbers                   end_number: 15
  deducting_point_numbers = option_numbers                   end_number:  9
  total_point_numbers     = option_numbers begin_number: -9, end_number: 15
%>
<%###########################################################################%>
<%= label_tag "得点：" %>
<div style="margin-left: 10px;">
  <%= label_tag "#{@robot.name}：" %>
  <div style="margin-left: 10px;">
    得点：<%= f.select :my_gaining_point, gaining_point_numbers %>点
    <br />
    減点：<%= f.select :my_deducting_point, deducting_point_numbers %>点
    <br />
    合計：<%= f.select :my_total_point, total_point_numbers %>点
  </div>
  <%#------------------------------------------------------------------------%>
  <%= label_tag "対戦相手：" %>
  <div style="margin-left: 10px;">
    得点：<%= f.select :opponent_gaining_point, gaining_point_numbers %>点
    <br />
    減点：<%= f.select :opponent_deducting_point, deducting_point_numbers %>点
    <br />
    合計：<%= f.select :opponent_total_point, total_point_numbers %>点
  </div>
</div>
<%###########################################################################%>
<br />
<%= f.label :extra_time, "延長(30秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<%###########################################################################%>
<br />
<%= f.label :memo, "メモ：" %>
<div style="margin-left: 10px;">
  <%= f.text_field :memo %>
</div>
<%#==========================================================================%>
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
