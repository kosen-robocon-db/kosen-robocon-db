<%= f.hidden_field :id %>
<%
  deducting_point_numbers = option_numbers           end_number: 9
  retry_numbers           = option_numbers digit: 1, end_number: 1
%>
<%###########################################################################%>
<%= label_tag "距離とリトライ：" %>
<div style="margin-left: 10px;">
  <%= label_tag "#{@robot.name}：" %>
  <div style="margin-left: 10px;">
    距離：<%= f.select :my_gaining_point, gaining_point_numbers %>cm
    <br />
    反則：<%= f.select :my_deducting_point,
      deducting_point_numbers %>回 x 50cm
    <br />
    合計：<%= f.select :my_total_point, total_point_numbers %>cm
    <br />
    リトライ：<%= f.select :my_retry, retry_numbers %>回
  </div>
  <%#------------------------------------------------------------------------%>
  <%= label_tag "対戦相手：" %>
  <div style="margin-left: 10px;">
    距離：<%= f.select :opponent_gaining_point, gaining_point_numbers %>cm
    <br />
    反則：<%= f.select :opponent_deducting_point,
      deducting_point_numbers %>回 x 50cm
    <br />
    合計：<%= f.select :opponent_total_point, total_point_numbers %>cm
    <br />
    リトライ：<%= f.select :opponent_retry, retry_numbers %>回
  </div>
</div>
<%###########################################################################%>
<br />
<%= render "game_details/form/common_parts/jury_votes", f: f,
  juries_number: 5 %><%# 審査員判定 %>
<%###########################################################################%>
<br />
<%= f.label :memo, "メモ：" %>
<div style="margin-left: 10px;">
  <%= f.text_field :memo %>
</div>
<%#==========================================================================%>
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
