<%= f.hidden_field :id %>
<%
  foul_numbers  = option_numbers           end_number: 5
  retry_numbers = option_numbers digit: 1, end_number: 9
%>
<%###########################################################################%>
<%= label_tag "タイムとリトライなど：" %>
<div style="margin-left: 10px;">
  <%= label_tag "#{@robot.name}：" %>
  <div style="margin-left: 10px;">
    タイム：
    <%= f.select :my_time_minute, time_numbers %>分
    <%= f.select :my_time_second, time_numbers %>秒
    <br />
    リトライ：<%= f.select :my_retry, retry_numbers %>回
    <br />
    ファウル：<%= f.select :my_foul, foul_numbers %>回
  </div>
  <%#------------------------------------------------------------------------%>
  <%= label_tag "対戦相手：" %>
  <div style="margin-left: 10px;">
    タイム：
    <%= f.select :opponent_time_minute, time_numbers %>分
    <%= f.select :opponent_time_second, time_numbers %>秒
    <br />
    リトライ：<%= f.select :opponent_retry, retry_numbers %>回
    <br />
    ファウル：<%= f.select :opponent_foul, foul_numbers %>回
  </div>
</div>
<%###########################################################################%>
<br />
<%= render "game_details/form/common_parts/progress", f: f,
  klass: GameDetail21st %><%# 完了課題 %>
<%#==========================================================================%>
<br />
<%= render "game_details/form/common_parts/jury_votes", f: f,
  juries_number: 5 %><%# 審査員判定 %>
<%###########################################################################%>
<br />
<%= f.label :memo, "メモ：" %>
<div style="margin-left: 10px;">
  <%= f.text_field :memo %>
</div>
<%#==========================================================================%>
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
