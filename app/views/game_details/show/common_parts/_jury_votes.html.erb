<%= label_tag "", "審査員判定：" %>
<% concat d.jury_votes.to_bool ? "有り" : "無し" %>
<% if d.jury_votes.to_bool %>
  <div class="indent">
    <%= label_tag "", "#{@game.left_robot.name}：", class: 'robot_name' %>
    <div class="indent">
      <%= "#{d.my_jury_votes}".gsub(/_/, '-') %>票
    </div>
    <%#----------------------------------------------------------------------%>
    <%= label_tag "", "#{@game.right_robot.name}：", class: 'robot_name' %>
    <div class="indent">
      <%= "#{d.opponent_jury_votes}".gsub(/_/, '-') %>票
    </div>
  </div>
<% end %>
