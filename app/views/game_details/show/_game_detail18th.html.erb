<%#
  以下の my_time_minute などの properties に JSON 形式で格納される情報は、
  このビューでは基本的に変数として存在しているものとし、
  またオブジェクトとして nil だったとしても問題がないものとし、
  present? メソッドなどで確認することはしないものとする。（暫定）
%>
<%###########################################################################%>
<%= label_tag "", "タイムとリトライなど：" %>
<div class="indent">
  <%= label_tag "", "#{@game.left_robot.name}：", class: 'robot_name' %>
  <div class="indent">
    <%= label_tag "", "タイム：" %>
    <%= "#{d.my_time_minute}".gsub(/_/, '-') %>分
    <%= "#{d.my_time_second}".gsub(/_/, '-') %>秒
    <%#======================================================================%>
    <br />
    <%= label_tag "", "リトライ：" %>
    <%= "#{d.my_retry}".gsub(/_/, '-') %>回
    <br />
    <%= label_tag "", "反則：" %>
    <%= "#{d.my_foul}".gsub(/_/, '-') %>回
  </div>
  <%#------------------------------------------------------------------------%>
  <%= label_tag "", "#{@game.right_robot.name}：", class: 'robot_name' %>
  <div class="indent">
    <%= label_tag "", "タイム：" %>
    <%= "#{d.opponent_time_minute}".gsub(/_/, '-') %>分
    <%= "#{d.opponent_time_second}".gsub(/_/, '-') %>秒
    <%#======================================================================%>
    <br />
    <%= label_tag "", "リトライ：" %>
    <%= "#{d.opponent_retry}".gsub(/_/, '-') %>回
    <br />
    <%= label_tag "", "反則：" %>
    <%= "#{d.opponent_foul}".gsub(/_/, '-') %>回
  </div>
</div>
<%###########################################################################%>
<br />
<%= render "game_details/show/common_parts/progress", d: d,
klass: GameDetail18th %><%# 完了課題 %>
<%#==========================================================================%>
<br />
<%= label_tag "", "到達距離判定：" %>
<% concat d.distance.to_bool ? "有り" : "無し" %>
<% if d.distance.to_bool %>
  <div class="indent">
    <%= label_tag "", "#{@game.left_robot.name}：", class: 'robot_name' %>
    <div class="indent">
      到達距離：<%= "#{d.my_distance}".gsub(/_/, '-') %>m
    </div>
      <%#--------------------------------------------------------------------%>
    <%= label_tag "", "#{@game.right_robot.name}：", class: 'robot_name' %>
    <div class="indent">
      到達距離：<%= "#{d.opponent_distance}".gsub(/_/, '-') %>m
    </div>
  </div>
<% end %>
<%#==========================================================================%>
<br />
<%= render "game_details/show/common_parts/jury_votes", d: d %><%# 審査員判定 %>
<%###########################################################################%>
<br />
<%= label_tag "", "メモ：" %><br />
<div class="indent">
  <%= "#{d.memo}" %>
</div>
