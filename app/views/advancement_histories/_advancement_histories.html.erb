<div class="row">
  <div class="col-lg-12">
    <h4>全国大会進出情報</h4>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>回</th>
          <th>大会名</th>
          <th>進出ケース</th>
          <th>ロボット名</th>
        </tr>
      </thead>
      <tbody>
      <% advancement_histories.present? &&
        advancement_histories.each do |history| %>
        <tr>
          <td align="right"><%= history.contest.nth %></td>
          <td><%= history.contest.name %></td>
          <td><%= history.advancement.case_name %></td>
          <td>
            <%= link_to history.robot.name.truncate(SHORTENING_LEN),
              robot_path(history.robot.code) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
