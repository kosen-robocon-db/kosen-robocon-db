<%= f.hidden_field :id %>
<%
  retry_numbers = option_numbers digit: 1, end_number: 1
  foul_numbers  = option_numbers digit: 1, end_number: 3
%>
<table>
  <tr><td><%= label_tag "#{@robot.name}：" %></td></tr>
  <tr><td>
    <%= ("&nbsp;"*4).html_safe %>
    リトライ：<%= f.select :my_retry, retry_numbers %>回
  </td></tr>
  <tr><td>
    <%= ("&nbsp;"*4).html_safe %>
    反則：<%= f.select :my_foul, foul_numbers %>回
  </td></tr>
  <%#########################################################################%>
  <tr><td><%= label_tag "対戦相手：" %></td></tr>
  <tr><td>
    <%= ("&nbsp;"*4).html_safe %>
    リトライ：<%= f.select :opponent_retry, retry_numbers %>回
  </td></tr>
  <tr><td>
    <%= ("&nbsp;"*4).html_safe %>
    反則：<%= f.select :opponent_foul, foul_numbers %>回
  </td></tr>
</table>
<%= render "games/game_details/common_parts/progress", f: f,
  klass: GameDetail19th %>
<%= render "games/game_details/common_parts/special_win", f: f,
  special_win_name: "ふるさとゴール" %>
<%= render "games/game_details/common_parts/jury_votes", f: f,
  juries_number: 5 %><%# 審査員判定 %>
<br />
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
