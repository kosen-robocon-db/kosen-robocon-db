<%= f.hidden_field :id %>
<%
  gaining_point_numbers = Array([["--", GameDetail::Constant::UNKNOWN_VALUE]])
  gaining_point_numbers.concat( Array.new(16) { |i|
    [ i.to_s.rjust(2, ' '), i ]
  } ) # 空白が左詰めされない・・・
  deducting_point_numbers = Array([["--", GameDetail::Constant::UNKNOWN_VALUE]])
  deducting_point_numbers.concat( Array.new(9) { |i|
    [ i.to_s.rjust(2, ' '), i ]
  } ) # 空白が左詰めされない・・・
  total_point_numbers = Array([["--", GameDetail::Constant::UNKNOWN_VALUE]])
  total_point_numbers.concat( Array.new(25) { |i|
    [ (i - 9).to_s.rjust(2, ' '), i - 9 ]
  } ) # 空白が左詰めされない・・・
%>
<table>
  <tr>
    <td><%= f.label :my_gaining_point,
      "#{@robot.name}の点数：" %></td>
    <td>得点<%= f.select :my_gaining_point,
      gaining_point_numbers %>点&nbsp;</td>
    <td>減点<%= f.select :my_deducting_point,
      deducting_point_numbers %>点&nbsp;</td>
    <td>合計<%= f.select :my_total_point,
      total_point_numbers %>点</td>
  </tr>
  <tr>
    <td><%= f.label :opponent_gaining_point,
      "対戦相手の点数：" %></td>
    <td>得点<%= f.select :opponent_gaining_point,
      gaining_point_numbers %>点&nbsp;</td>
    <td>減点<%= f.select :opponent_deducting_point,
      deducting_point_numbers %>点&nbsp;</td>
    <td>合計<%= f.select :opponent_total_point,
      total_point_numbers %>点</td>
  </tr>
</table>
<%= f.label :extra_time, "延長(30秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<br />
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
