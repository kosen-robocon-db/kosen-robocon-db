<%= f.hidden_field :id %>
<%
  gaining_point_numbers = option_numbers end_number: 18
  art_point_numbers     = option_numbers end_number:  9
  total_point_numbers   = option_numbers end_number: 27
%>
<table>
  <tr>
    <td><%= label_tag "#{@robot.name}：" %></td>
  </tr>
  <tr>
    <td>
      <%= ("&nbsp;"*4).html_safe %>
      得点<%= f.select :my_gaining_point, gaining_point_numbers %>点
      <%= ("&nbsp;"*2).html_safe %>
      芸術点<%= f.select :my_art_point, art_point_numbers %>点
      <%= ("&nbsp;"*2).html_safe %>
      合計<%= f.select :my_total_point, total_point_numbers%>点
    </td>
  </tr>
  <%#########################################################################%>
  <tr>
    <td><%= label_tag "対戦相手：" %></td>
  </tr>
  <tr>
    <td>
      <%= ("&nbsp;"*4).html_safe %>
      得点<%= f.select :opponent_gaining_point, gaining_point_numbers %>点
      <%= ("&nbsp;"*2).html_safe %>
      芸術点<%= f.select :opponent_art_point, art_point_numbers %>点
      <%= ("&nbsp;"*2).html_safe %>
      合計<%= f.select :opponent_total_point, total_point_numbers %>点
    </td>
  </tr>
</table>
<%= f.label :extra_time, "延長(60秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<br />
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
