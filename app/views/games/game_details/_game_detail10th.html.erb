<%= f.hidden_field :id %>
<%
  gaining_point_numbers = option_numbers                   end_number: 18
  art_point_numbers     = option_numbers                   end_number:  9
  total_point_numbers   = option_numbers begin_number: -5, end_number: 27
%>
<table>
  <tr>
    <td><%= f.label :my_gaining_point, "#{@robot.name}の点数：" %></td>
    <td>得点<%= f.select :my_gaining_point, gaining_point_numbers %>点</td>
    <td>&nbsp;</td>
    <td>芸術点<%= f.select :my_art_point, art_point_numbers %>点</td>
    <td>&nbsp;</td>
    <td>合計<%= f.select :my_total_point, total_point_numbers%>点</td>
  </tr>
  <tr>
    <td><%= f.label :opponent_gaining_point, "対戦相手の点数：" %></td>
    <td>得点<%= f.select :opponent_gaining_point, 
      gaining_point_numbers %>点</td>
    <td>&nbsp;</td>
    <td>芸術点<%= f.select :opponent_art_point, art_point_numbers %>点</td>
    <td>&nbsp;</td>
    <td>合計<%= f.select :opponent_total_point, total_point_numbers %>点</td>
  </tr>
</table>
<%= f.label :extra_time, "延長(60秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<br />
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
