<%= f.hidden_field :id %>
<%
  gaining_point_numbers   = option_numbers                   end_number: 50
  deducting_point_numbers = option_numbers                   end_number:  5
  total_point_numbers     = option_numbers begin_number: -5, end_number: 50
%>
<table>
  <tr>
    <td><%= f.label :my_gaining_point, "#{@robot.name}の点数：" %></td>
    <td>得点<%= f.select :my_gaining_point, point_numbers %>点&nbsp;</td>
    <td>減点<%= f.select :my_deducting_point, point_numbers %>点&nbsp;</td>
    <td>合計<%= f.select :my_total_point, total_point_numbers%>点</td>
  </tr>
  <tr>
    <td></td>
    <td colspan=2>
      <%= f.label :my_basket_drible, "バスケット・ドリブル：" %>
    </td>
    <td>
      <%= f.check_box :my_basket_drible,
        { checked: f.object.my_basket_drible }, true, false %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :opponent_gaining_point, "対戦相手の点数：" %></td>
    <td>得点<%= f.select :opponent_gaining_point, point_numbers %>点&nbsp;</td>
    <td>減点<%= f.select :opponent_deducting_point, point_numbers %>点&nbsp;</td>
    <td>合計<%= f.select :opponent_total_point, total_point_numbers %>点</td>
  </tr>
  <tr>
    <td></td>
    <td colspan=2>
      <%= f.label :opponent_basket_drible, "バスケット・ドリブル：" %>
    </td>
    <td>
      <%= f.check_box :opponent_basket_drible,
        { checked: f.object.opponent_basket_drible }, true, false %>
    </td>
  </tr>
</table>
<%= f.label :special_win, "Vゴール：" %>
<%= f.check_box :special_win, { checked: f.object.special_win }, true, false %>
<br />
<% if f.object.special_win %>
<div class="special_win___nested_field_for_replace_with_index__">
<% else %>
<div class="special_win___nested_field_for_replace_with_index__ hidden">
<% end %>
  <table>
    <tr>
      <td><%= f.label :special_win_time_minute, "タイム：" %></td>
      <td>
        <%= f.select :special_win_time_minute, time_numbers %>分
        <%= f.select :special_win_time_second, time_numbers %>秒
      </td>
    </tr>
  </table>
</div>
<%= f.label :extra_time, "延長(60秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<br />
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
