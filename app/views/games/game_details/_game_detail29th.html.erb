<%= f.hidden_field :id %>
<%= f.label :my_height, "#{@robot.name}が積み上げた高さ：" %>
<%= f.text_field :my_height %>cm<br />
<%= f.label :opponent_height, "対戦相手が積み上げた高さ：" %>
<%= f.text_field :opponent_height %>cm<br />
<%= f.label :judge, "審査員判定：" %>
<% if f.object.judge %>
  <%= f.check_box :judge, {:checked => true}, true, false %><br />
  <div class="judge_score___nested_field_for_replace_with_index__">
<% else %>
  <%= f.check_box :judge, {:checked => false}, true, false %><br />
  <div class="judge_score___nested_field_for_replace_with_index__ hidden">
<% end %>
    <%= f.label :judge_to_me, "#{@robot.name}への票数" %>
    <%= f.text_field :judge_to_me %><br />
    <%= f.label :judge_to_opponent, "対戦相手への票数" %>
    <%= f.text_field :judge_to_opponent %><br />
  </div>
<%= f.label :progress, "課題進捗度：" %>
  <% if f.object.progress %>
    <%= f.check_box :progress, {:checked => true}, true, false %><br />
    <div class="progress___nested_field_for_replace_with_index__">
  <% else %>
    <%= f.check_box :progress, {:checked => false}, true, false %><br />
    <div class="progress___nested_field_for_replace_with_index__ hidden">
  <% end %>
      <%= f.label :my_progress, "#{@robot.name}の課題達成度" %>
      <%= f.text_field :my_progress %><br />
      <%= f.label :opponent_progress, "対戦相手の課題達成度" %>
      <%= f.text_field :opponent_progress %><br />
    </div>

<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
