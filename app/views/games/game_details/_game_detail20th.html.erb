<%= f.hidden_field :id %>
<%
  flag_numbers      = option_numbers           end_number: 5
  foul_numbers      = option_numbers           end_number: 5
  retry_numbers     = option_numbers digit: 1, end_number: 1
  interrupt_numbers = option_numbers digit: 1, end_number: 9
%>
<table>
  <tr><td><%= label_tag "#{@robot.name}：" %></td></tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>旗：</td>
    <td><%= f.select :my_flag, flag_numbers %>本</td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>反則：</td>
    <td><%= f.select :my_foul, foul_numbers %>回</td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>合体：</td>
    <td><%= f.check_box :my_union,
      { checked: f.object.my_union }, true, false %></td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>リトライ：</td>
    <td><%= f.select :my_retry, retry_numbers %>回</td>
  </tr>
  <%#########################################################################%>
  <tr><td><%= label_tag "対戦相手：" %></td></tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>旗：</td>
    <td><%= f.select :opponent_flag, flag_numbers %>本</td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>反則：</td>
    <td><%= f.select :opponent_foul, foul_numbers %>回</td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>合体：</td>
    <td><%= f.check_box :opponent_union,
      { checked: f.object.opponent_union }, true, false %></td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %>リトライ：</td>
    <td><%= f.select :opponent_retry, retry_numbers %>回</td>
  </tr>
</table>
<br />
<%= f.label :interrupt, "試合中断：" %>
<%= f.select :interrupt, interrupt_numbers %>回
<br />
<%= render "games/game_details/common_parts/special_win", f: f,
  special_win_name: "大勝利" %>
<%= f.label :extra_time, "延長(60秒)：" %>
<%= f.check_box :extra_time, { checked: f.object.extra_time }, true, false %>
<br />
<%= render "games/game_details/common_parts/jury_votes", f: f,
  juries_number: 5 %><%# 審査員判定 %>
<br />
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
