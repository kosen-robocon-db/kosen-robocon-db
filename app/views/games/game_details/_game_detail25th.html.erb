<%= f.hidden_field :id %>
<%
  gaining_point_numbers = option_numbers           end_number: 18
  penalty_numbers       = option_numbers digit: 1, end_number:  9
  retry_numbers         = option_numbers digit: 1, end_number:  9
  vote_numbers          = option_numbers digit: 1, end_number:  3
%>
<table>
  <tr>
    <td colspan="4"><%= f.label :my_gaining_point, "#{@robot.name}：" %></td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>得点<%= f.select :my_gaining_point,
      gaining_point_numbers %>点</td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>パーフェクト：</td>
    <td><%= f.check_box :my_special_win,
      {:checked => f.object.my_special_win}, true, false %></td>
    <td>
      <% if f.object.my_special_win %>
      <div class=
        "my_special_win___nested_field_for_replace_with_index__">
      <% else %>
      <div class=
        "my_special_win___nested_field_for_replace_with_index__ hidden">
      <% end %>
        タイム：
        <%= f.select :my_time_minute, time_numbers %>分
        <%= f.select :my_time_second, time_numbers %>秒
      </div>
    </td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>反則：</td>
    <td><%= f.select :my_penalty, penalty_numbers %></td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>リトライ：</td>
    <td><%= f.select :my_retry, penalty_numbers %></td>
  </tr>
  <%##########################################################################%>
  <tr>
    <td colspan="4"><%= f.label :opponent_gaining_point, "対戦相手：" %></td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>得点<%= f.select :opponent_gaining_point,
      gaining_point_numbers %>点</td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>パーフェクト：</td>
    <td><%= f.check_box :opponent_special_win,
      {:checked => f.object.opponent_special_win}, true, false %></td>
    <td>
      <% if f.object.opponent_special_win %>
      <div class=
        "opponent_special_win___nested_field_for_replace_with_index__">
      <% else %>
      <div class=
        "opponent_special_win___nested_field_for_replace_with_index__ hidden">
      <% end %>
        タイム：
        <%= f.select :opponent_time_minute, time_numbers %>分
        <%= f.select :opponent_time_second, time_numbers %>秒
      </div>
    </td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>反則：</td>
    <td><%= f.select :opponent_penalty, penalty_numbers %></td>
  </tr>
  <tr>
    <td><%= ("&nbsp;"*4).html_safe %></td>
    <td>リトライ：</td>
    <td><%= f.select :opponent_retry, penalty_numbers %></td>
  </tr>
</table>
<%= f.label :jury_votes, "審査員判定：" %>
<%= f.check_box :jury_votes, {:checked => f.object.jury_votes}, true, false %>
<br />
<% if f.object.jury_votes %>
<div class="jury_votes___nested_field_for_replace_with_index__">
<% else %>
<div class="jury_votes___nested_field_for_replace_with_index__ hidden">
<% end %>
  <table>
    <tr>
      <td><%= ("&nbsp;"*4).html_safe %></td>
      <td><%= f.label :my_jury_votes, "#{@robot.name}への票数：" %></td>
      <td><%= f.select :my_jury_votes, vote_numbers %></td>
    </tr>
    <tr>
      <td><%= ("&nbsp;"*4).html_safe %></td>
      <td><%= f.label :opponent_jury_votes, "対戦相手への票数：" %></td>
      <td><%= f.select :opponent_jury_votes, vote_numbers %></td>
    </tr>
  </table>
</div>
<%= f.label :memo, "メモ：" %>
<%= f.text_field :memo %><br />
<br />
<%= f.hidden_field :_destroy %>
<%= f.remove_nested_fields_link '削除', class: 'btn btn-danger',
  role: 'button' %><br />
