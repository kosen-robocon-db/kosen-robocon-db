<header>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= fa_icon("wrench", text: base_title) %>
        <% end %>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown navbar-right">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <%= image_tag current_user.image_mini, alt: "MyFace" %> <%= current_user.nickname %><%="(未承認)" unless current_user.approved? %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to destroy_user_session_path do %>
                    <%= fa_icon "sign-out", text:"ログアウト" %>
                  <% end %>
                </li>
                <% if current_user.admin? %>
                  <li class="divider"></li>
                  <li><%= link_to fa_icon("users", text:"ユーザー一覧"), users_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to fa_icon("table", text:"ロボット"), robots_path(format: "csv") %></li>
                  <li><%= link_to fa_icon("table", text:"ロボット状態"), robot_conditions_path(format: "csv") %></li>
                  <li><%= link_to fa_icon("table", text:"試合"), games_path(format: "csv") %></li>
                  <li><%= link_to fa_icon("table", text:"試合詳細"), game_details_path(format: "csv") %></li>
                  <li><%= link_to fa_icon("table", text:"優勝・受賞歴"), prize_histories_path(format: "csv") %></li>
                <% end %>
              </ul>
            </li>
          <% else %>
            <li class="navbar-right">
              <%= link_to user_twitter_omniauth_authorize_path do %>
                <%= fa_icon("twitter", text:"編集(ログイン)") %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav">
          <li><%= link_to fa_icon("trophy", text:"大会一覧"), contests_path %></li>
          <li><%= link_to fa_icon("graduation-cap", text:"キャンパス一覧"), campuses_path %></li>
          <li><%= link_to fa_icon("bar-chart", text:"統計"), home_statistics_path %></li>
        </ul>
      </div>
    </div>
  </div>
</header>
