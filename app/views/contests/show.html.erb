<% provide(:title, @contest.name) %>

<%= render "shared/title", title: (yield :title) %>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p><%= link_to_prior_contest params[:nth] %></p>
    </div>
    <div class="pull-right">
      <p><%= link_to_posterior_contest params[:nth] %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h4>成績と受賞</h4>
    <% @regions.each do |region| %>
      <% n = region.code == 0 ? "#{region.name}大会" : "#{region.name}地区大会" %>
      <%= link_to n, contest_prize_history_path(
        contest_nth: @contest.nth, region_code: region.code) %>
      <br />
    <% end %>
  </div>
</div>
<br />

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p><%= link_to_prior_contest params[:nth] %></p>
    </div>
    <div class="pull-right">
      <p><%= link_to_posterior_contest params[:nth] %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= will_paginate @robots, inner_window: 2, outer_window: 0  %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h4>出場ロボット</h4>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>キャンパス</th>
          <th>ロボット名</th>
          <th>カナ</th>
          <th>チーム</th>
        </tr>
      </thead>
      <tbody>
        <% @robots.each do |robot| %>
          <tr>
            <td><%= link_to robot.campus.abbreviation, campus_path(robot.campus.code) %></td>
            <td><%= link_to robot.name, robot_path(robot.code) %></td>
            <td><%= robot.kana %></td>
            <td><%= robot.team %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= will_paginate @robots, inner_window: 2, outer_window: 0  %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p><%= link_to_prior_contest params[:nth] %></p>
    </div>
    <div class="pull-right">
      <p><%= link_to_posterior_contest params[:nth] %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <p><%= link_to fa_icon("chevron-left", text: "戻る"), contests_path %></p>
  </div>
</div>
